{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "sourceMap": true,
    "baseUrl": "./",
    "lib": ["es2017"],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@src*": ["src*"],
      "@test*": ["__test__*"]
    },
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["./src/", "./__test__/", "examples"]
}
