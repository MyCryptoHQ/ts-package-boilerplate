{
  "extends": "./tsconfig",
  "compilerOptions": {
    "outDir": "./dist/lib",
    "target": "es6",
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true
  },
  "include": ["./src/"],
  "inlineSources": true,
  "inlineSourceMap": true,
  "exclude": [
    "node_modules",
    "dist",
    "./src/**/*.test.ts",
    "./src/**/*.spec.ts"
  ]
}
